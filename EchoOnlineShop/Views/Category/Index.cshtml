@model IEnumerable<EchoOnlineShop.Models.Category>;

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-controller="Category" asp-action="Create">
                <i class="fa-solid fa-plus"></i> &nbsp;  Create New Category
            </a>
        </div>
    </div>
    <br />
</div>
@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="50%">@item.Name</td>
                    <td width="30%">@item.DisplayOrder</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group" >
                            <a class="btn btn-warning mx-2" asp-route-Id="@item.ID" asp-controller="Category" asp-action="Edit">
                                <i class="fa-solid fa-pen-to-square"></i> @*&nbsp; Edit*@
                            </a>
                            <a class="btn btn-danger mx-2" asp-route-Id="@item.ID" asp-controller="Category" asp-action="Delete">
                                <i class="fa-regular fa-trash-can"></i> @*&nbsp; Delete*@
                            </a>
                        </div>
                    </td>
                </tr>

            }
        </tbody>
    </table>
}
else
{
    <p>No Category Exist</p>
}
