@model IEnumerable<EchoOnlineShop.Models.Product>;
<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-action="InsertUpdate">
                <i class="fa-solid fa-plus"></i> &nbsp;  Create New Product
            </a>
        </div>
    </div>
    <br />
</div>
@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr> 
                <th>Product Name</th>
                <th>Price</th>
                <th>Category</th>
                <th>Application Type</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) 
            {
                <tr>
                    <td width="30%">@item.Name</td>
                    <td width="10%">@item.Price</td>
                    <td width="20%">@item.Category.Name</td>
                    <td width="20%">@item.AppType.Name</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-warning mx-2" asp-route-Id="@item.Id" asp-action="InsertUpdate">
                                <i class="fa-solid fa-pen-to-square"></i> @*&nbsp; Edit*@
                            </a>
                            <a class="btn btn-danger mx-2" asp-route-Id="@item.Id" asp-action="Delete">
                                <i class="fa-regular fa-trash-can"></i> @*&nbsp; Delete*@
                            </a>
                        </div>
                    </td>
                </tr>

            }
        </tbody>
    </table>
}
else
{
    <p>No Product Exist</p>
}
